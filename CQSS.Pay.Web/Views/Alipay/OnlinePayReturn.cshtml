@using CQSS.Pay.Model;
@using CQSS.Pay.Model.Api;
@{
    Layout = "~/Views/Shared/_LayoutPay.cshtml";
    ViewBag.Title = "支付宝支付结果";
    string errorMsg = ViewBag.ErrorMsg as string;
    var notifyInfo = ViewBag.NotifyInfo as PayNotifyInfo;
    if (notifyInfo == null) { notifyInfo = new PayNotifyInfo(); }
}
@if (!string.IsNullOrWhiteSpace(errorMsg))
{
    <div>@errorMsg</div>
    <br />
    <div>如有疑问，请联系客服</div>
}
else
{
    var result = "支付" + (notifyInfo.Result == ((int)ResultStatus.Success).ToString() ? "成功" : "失败");
    <div>订单号：@notifyInfo.OrderId</div>
    <div>交易流水号：@notifyInfo.TradeNo</div>
    <div>支付金额：￥@notifyInfo.PaymentAmt</div>
    <div>支付结果：@result</div>
    <div>如有疑问，请联系客服</div>
}
